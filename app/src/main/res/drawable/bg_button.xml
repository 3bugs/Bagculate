<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <inset android:insetBottom="5dp" android:insetLeft="5dp" android:insetRight="5dp" android:insetTop="5dp">
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <gradient
                    android:angle="0"
                    android:endColor="#93E4FF"
                    android:centerColor="#2DCCFF"
                    android:startColor="#93E4FF"
                    android:type="linear"/>
                <stroke android:width="1dp" android:color="@android:color/black"/>
                <padding android:bottom="10dp" android:left="12dp" android:right="12dp" android:top="10dp"/>
            </shape>
        </inset>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <inset android:insetBottom="5dp" android:insetLeft="5dp" android:insetRight="5dp" android:insetTop="5dp">
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <gradient
                    android:angle="0"
                    android:endColor="#2DCCFF"
                    android:centerColor="#93E4FF"
                    android:startColor="#2DCCFF"
                    android:type="linear"/>
                <stroke android:width="1dp" android:color="@android:color/black"/>
                <padding android:bottom="10dp" android:left="12dp" android:right="12dp" android:top="10dp"/>
            </shape>
        </inset>
    </item>

</selector>